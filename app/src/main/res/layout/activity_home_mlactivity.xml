<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ml.BirdClassifyMLActivity">

    <ImageView
        android:id="@+id/img_bird"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="----"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/img_bird"
        app:layout_constraintStart_toStartOf="@+id/img_bird"
        app:layout_constraintTop_toBottomOf="@+id/img_bird" />

    <Button
        android:id="@+id/btn_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/txt_output"
        app:layout_constraintStart_toStartOf="@+id/txt_output"
        app:layout_constraintTop_toBottomOf="@+id/txt_output" />
</androidx.constraintlayout.widget.ConstraintLayout>